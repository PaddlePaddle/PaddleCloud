{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		},
		"sourceType": "module"
	},
	"plugins": [
		"babel"
	],
	"rules": {
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"warn",
			"single"
		],
		"semi": [
			"warn",
			"always"
		],
		"brace-style": 1,
		"no-console": 1,
		"no-multi-spaces": 1,
		"no-negated-condition": 1,
		"no-undef": 0,
		"no-unused-vars": 1,
		"prefer-template": 1,
		"array-bracket-spacing": 0,
		"babel/array-bracket-spacing": 1,
		"object-curly-spacing": 0,
		"object-shorthand": 0,
		"arrow-parens": 0,
		"babel/arrow-parens": 0
	}
}
